generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id               Int      @id @default(autoincrement())
  name             String
  dateOfBirth      DateTime
  gender           String
  contactNumber    String
  homeAddress      String
  allergies        String[]
  bloodType        String
  chronicCondition String
  familyDoctor     String
  insurance        String
  admissionDate    DateTime
  condition        String
}
