generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FamilyDoctor {
  id            Int       @id @default(autoincrement())
  name          String
  specialty     String
  contactNumber String
  userId        Int?       @unique
  user          User?      @relation(fields: [userId], references: [id])
  patients      Patient[]
}

model Patient {
  id               Int          @id @default(autoincrement())
  name             String
  dateOfBirth      DateTime
  gender           String
  contactNumber    String
  homeAddress      String
  allergies        String[]
  bloodType        String
  chronicCondition String
  insurance        String
  admissionDate    DateTime
  condition        String
  familyDoctorId   Int
  familyDoctor     FamilyDoctor @relation(fields: [familyDoctorId], references: [id])

  @@index([name]) // Index on name for faster lookups
  @@index([familyDoctorId]) // Index on familyDoctorId for faster lookups
  @@index([admissionDate]) // Index on admissionDate for faster sorting/filtering
}

model User {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  password String
  role     Role
  doctor   FamilyDoctor?

  @@map("users")
}

enum Role {
  ADMIN
  DOCTOR
}
